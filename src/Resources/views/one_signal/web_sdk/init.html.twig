      subdomainName: {{ dmytrof_push_notification_parameter('one_signal.subdomain') | json_encode() | raw() }},
      httpPermissionRequest: {"enable": true},
      {% endif %}
    }]);
    {{ dmytrof_push_notification_tags() }}
</script>
