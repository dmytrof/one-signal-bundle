<script>
    var OneSignal = window.OneSignal || [];
    OneSignal.push(["init", {
      appId: {{ dmytrof_push_notification_parameter('one_signal.app_id') | json_encode() | raw() }},
      autoRegister: {{ dmytrof_push_notification_parameter('one_signal.auto_register') | json_encode() | raw() }}, /* Set to true to automatically prompt visitors */
